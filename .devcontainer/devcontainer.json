{
    "name": "ROS Development Environment",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "ros-dev",
    "workspaceFolder": "/workspace",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-python.python",
                "ms-vscode.cmake-tools",
                "ms-iot.vscode-ros",
                "eamodio.gitlens"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "files.associations": {
                    "*.launch": "xml",
                    "*.xacro": "xml",
                    "*.urdf": "xml"
                }
            }
        }
    },
    
    "remoteUser": "root",
    "runArgs": ["--privileged", "--network=host"]
}
