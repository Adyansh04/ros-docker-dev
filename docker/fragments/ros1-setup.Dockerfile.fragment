# Configure ROS repositories using ros-apt-source (supports ROS 1 and 2)
RUN apt-get update && apt-get install -y --no-install-recommends curl ca-certificates gnupg lsb-release \
 && ROS_APT_SOURCE_VERSION=$(curl -s https://api.github.com/repos/ros-infrastructure/ros-apt-source/releases/latest | grep -F "tag_name" | awk -F\" '{print $4}') \
 && . /etc/os-release \
 && curl -L -o /tmp/ros2-apt-source.deb "https://github.com/ros-infrastructure/ros-apt-source/releases/download/${ROS_APT_SOURCE_VERSION}/ros2-apt-source_${ROS_APT_SOURCE_VERSION}_${VERSION_CODENAME}_all.deb" \
 && dpkg -i /tmp/ros2-apt-source.deb \
 && apt-get update \
 && apt-get install -y --no-install-recommends ros-dev-tools \
 && rm -rf /var/lib/apt/lists/* /tmp/ros2-apt-source.deb
